<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".AddProduct2Activity">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="start"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="Add By Name"
            android:textColor="#000000"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="10dp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"


            >
            <AutoCompleteTextView
                android:id="@+id/searchAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="#00000000"
                android:layout_margin="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:hint="Search"
                android:textSize="@dimen/_15sdp"
                android:imeOptions="actionSearch"
                android:inputType="textAutoComplete|textAutoCorrect" />


        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="start"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="Scan Barcode"
            android:textColor="#000000"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="10dp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"


            >
            <TextView
                android:id="@+id/barcodeview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="#00000000"
                android:drawablePadding="@dimen/_2sdp"
                android:drawableStart="@drawable/dd1"
                android:layout_margin="@dimen/_10sdp"
                android:hint="Barcode"
                android:textSize="@dimen/_15sdp"
                android:imeOptions="actionSearch"
                android:inputType="textAutoComplete|textAutoCorrect" />


        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="start"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="Dose"
            android:textColor="#000000"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="10dp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"


            >
            <EditText
                android:id="@+id/dose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="#00000000"
                android:drawablePadding="@dimen/_2sdp"
                android:layout_margin="@dimen/_10sdp"
                android:hint="mg"
                android:textSize="@dimen/_15sdp"
                android:imeOptions="actionSearch"
                android:inputType="textAutoComplete|textAutoCorrect" />


        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="start"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="Amount Left"
            android:textColor="#000000"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="10dp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"


            >
            <EditText
                android:id="@+id/tvStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="#00000000"
                android:drawablePadding="@dimen/_2sdp"
                android:layout_margin="@dimen/_10sdp"
                android:hint="1"
                android:textSize="@dimen/_15sdp"
                android:imeOptions="actionSearch"
                android:inputType="textAutoComplete|textAutoCorrect" />


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonscan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:ems="10"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:inputType="textPersonName"
            android:text="Scan Bar/QR Code"
            android:textStyle="italic"
            />

        <Button
            android:id="@+id/additembuttontodatabase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="#fff"

            android:layout_marginBottom="@dimen/_20sdp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Add Item"
            />
    </LinearLayout>


</RelativeLayout>