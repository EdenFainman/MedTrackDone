<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/aaad2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:padding="@dimen/_6sdp"
                android:id="@+id/candidate"
                android:layout_margin="@dimen/_10sdp"

                android:textAlignment="center"
                android:background="@drawable/black_23"
                android:text="User"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:id="@+id/employer"
                android:layout_margin="@dimen/_10sdp"

                android:textAlignment="center"

                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/back_outline"
                android:text="Doctor"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_weight="1"
            android:text="Med Track"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textAlignment="textStart"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_23sdp"
            android:text="Sign Up"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etName"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:textColor="#000"
            android:focusable="true"
            android:background="@drawable/et_back"
            android:padding="@dimen/_6sdp"

            android:textColorHint="#717171"
            android:drawableTint="#000"
            android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
            android:hint="Full Name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etEmail"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:textColor="#000"
            android:textColorHint="#717171"
            android:focusable="true"
            android:background="@drawable/et_back"
            android:padding="@dimen/_6sdp"
            android:drawableTint="#000"
            android:drawableLeft="@drawable/ic_outline_email_24"
            android:hint="Email"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etShort"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            android:background="@drawable/et_back"
            android:padding="@dimen/_6sdp"
            android:textColorHint="#717171"
            android:drawableTint="#000"
            android:hint="A short description"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_outline_lock_24"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:textColor="#000"
            android:background="@drawable/et_back"
            android:padding="@dimen/_6sdp"
            android:textColorHint="#717171"
            android:drawableTint="#000"
            android:id="@+id/etPassword"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Experience in years"
                android:drawableLeft="@drawable/ic_baseline_work_outline_24"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:drawablePadding="@dimen/_12sdp"
                android:textColor="#000"
                android:background="@drawable/et_back"
                android:padding="@dimen/_6sdp"
                android:textColorHint="#717171"
                android:drawableTint="#000"
                android:id="@+id/etexp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Field e.g Dentist"
                android:drawableLeft="@drawable/ic_baseline_window_24"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:drawablePadding="@dimen/_12sdp"
                android:textColor="#000"
                android:visibility="gone"

                android:background="@drawable/et_back"
                android:padding="@dimen/_6sdp"
                android:textColorHint="#717171"
                android:drawableTint="#000"
                android:id="@+id/etField"/>




        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterBtn"
            android:textColor="#fff"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/black_23"
            android:text="Create Account"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/sign_in_button"
                app:cardBackgroundColor="#fff"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/black_23"
                android:text="Login"
                android:textColor="#fff" >

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_margin="@dimen/_2sdp"

                    android:src="@drawable/aaaa"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in with google"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#3C3C3C"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            android:id="@+id/change"
            android:textStyle="bold"
            android:text="Already have an account? Sign In"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:textSize="@dimen/_9sdp"
            android:text="By creating an account, you agree to our terms and conditions\n and privacy policy"/>

    </LinearLayout>


</ScrollView>