<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:visibility="gone"

        android:src="@drawable/top0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_20sdp"
            android:src="@drawable/aaad2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_weight="1"
            android:text="Med Track"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:padding="@dimen/_6sdp"
                android:id="@+id/candidate"
                android:layout_margin="@dimen/_10sdp"

                android:textAlignment="center"
                android:background="@drawable/black_23"
                android:text="User"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:id="@+id/employer"
                android:layout_margin="@dimen/_10sdp"

                android:textAlignment="center"

                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/back_outline"
                android:text="Doctor"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_weight="1"
            android:text="Sign In"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="@dimen/_23sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_outline_email_24"
                android:drawablePadding="@dimen/_12sdp"
                android:drawableTint="#000"
                android:hint="Email"
                android:background="@drawable/et_back"
                android:padding="@dimen/_6sdp"
                android:textColor="#000"
                android:textColorHint="#717171" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_outline_lock_24"
                android:drawablePadding="@dimen/_12sdp"
                android:drawableTint="#000"
                android:hint="Password"
                android:background="@drawable/et_back"
                android:padding="@dimen/_6sdp"
                android:textColor="#000"

                android:textColorHint="#717171" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/black_23"
                android:text="Login"
                android:textColor="#fff" />
            <androidx.cardview.widget.CardView
                android:id="@+id/sign_in_button"
                app:cardBackgroundColor="#fff"
                android:visibility="gone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/black_23"
                android:text="Login"
                android:textColor="#fff" >

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_margin="@dimen/_2sdp"

                    android:src="@drawable/aaaa"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in with google"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <TextView
            android:id="@+id/change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            android:text="Don't Have an account? Sign Up"
            android:textAlignment="center"
            android:textColor="#3C3C3C"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            android:text="By creating an account, you agree to our terms and conditions\n and privacy policy"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/_9sdp" />

    </LinearLayout>





</RelativeLayout>