<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    >


    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/back_news"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FFFFFF"
                >





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="@dimen/_22sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="Account"/>
            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>





        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/original"
                android:visibility="visible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        app:riv_oval="true"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:id="@+id/image"
                        app:tint="#151515"
                        android:src="@drawable/profile"/>

                    <RelativeLayout
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="bottom"
                        android:id="@+id/top">




                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            app:riv_oval="true"
                            android:src="@color/colorPrimary"
                            />

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/editBtn"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:padding="@dimen/_7sdp"
                            android:src="@drawable/ic_baseline_edit_24"
                            android:tint="#fff"
                            app:riv_oval="true" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_19sdp"
                        android:textColor="#000000"
                        android:fontFamily="@font/rubik_medium"
                        android:id="@+id/tvName"
                        android:text="Name"/>
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:id="@+id/editName"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_edit_24"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#656565"
                        android:maxLength="40"
                        android:id="@+id/tvBio"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/rubik_regular"
                        android:text="IHi, I m using Med Track"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:id="@+id/bioEdit"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_edit_24"/>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    >

                    <View
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="1dp"
                        android:id="@+id/line2"
                        android:layout_centerVertical="true"
                        android:background="#B3B3B3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_toEndOf="@+id/line2"
                        android:fontFamily="@font/rubik_medium"
                        android:text="Settings"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />



                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_27sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#fff"
                    android:id="@+id/task"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardElevation="@dimen/_10sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="#000"
                            android:text="Tasks"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:textColor="#717171"

                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Here is a list of your saved tasks"/>

                    </LinearLayout>






                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_27sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#fff"
                    android:id="@+id/appoint"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardElevation="@dimen/_10sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="#000"
                            android:text="Appointments"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:textColor="#717171"

                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Here is a list of your clients"/>

                    </LinearLayout>






                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_27sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:visibility="gone"
                    android:id="@+id/notification"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardElevation="@dimen/_10sdp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_10sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik_medium"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="#000"
                                android:text="Notifications"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik_regular"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Turn notifications On or Off"/>

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            android:checked="true"
                            android:id="@+id/swtich_noti"
                            />


                    </RelativeLayout>







                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_27sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:visibility="visible"
                    android:id="@+id/logout"
                    app:cardBackgroundColor="#fff"
                    android:background="#fff"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardElevation="@dimen/_10sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="#000"
                            android:text="Logout"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:textColor="#717171"

                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Tap to logout from the app"/>

                    </LinearLayout>






                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_27sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:id="@+id/client"
                    android:visibility="gone"
                    app:cardBackgroundColor="#fff"

                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardElevation="@dimen/_10sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="#000"
                            android:text="Your Clients"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="#717171"
                            android:text="Here is a list of your clients"/>

                    </LinearLayout>






                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_27sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:id="@+id/tos"
                    app:cardBackgroundColor="#fff"

                    android:layout_marginBottom="@dimen/_40sdp"
                    app:cardElevation="@dimen/_10sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="#000"
                            android:text="Privacy Policy"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:textColor="#717171"

                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Tap to read Terms &amp; Service / Privacy Policy"/>

                    </LinearLayout>






                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>




    </LinearLayout>


    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>
</RelativeLayout>