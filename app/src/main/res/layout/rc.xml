<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="end|bottom"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_49sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:foregroundGravity="center_vertical"
        app:cardElevation="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/chatround1"

            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/layoutLock"
        android:layout_width="56dp"
        android:layout_height="180dp"
        android:layout_gravity="right|bottom"
        android:layout_margin="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="#FFFFFF"
        app:cardElevation="0dp"
        android:visibility="gone"
        style="?android:attr/borderlessButtonStyle"
        app:cardCornerRadius="28dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewLock"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="18dp"
                app:srcCompat="@drawable/lock_ic" />

            <ImageView
                android:id="@+id/imageViewLockArrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="-8dp"
                app:srcCompat="@drawable/arrow" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/imageViewAudio"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="#000000"
        app:cardBackgroundColor="@color/colorPrimary"
        android:clickable="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_14sdp"
        app:cardUseCompatPadding="false"
        android:visibility="visible"
        style="?android:attr/borderlessButtonStyle"

        app:contentPadding="0dp">

        <ImageView
            android:id="@+id/imageAudio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_9sdp"
            app:srcCompat="@drawable/ic_mic_white" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/imageViewStop"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@color/colorAccent"
        android:clickable="true"
        android:elevation="0dp"
        android:translationZ="1dp"
        app:cardBackgroundColor="#fa3a3a"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_14sdp"
        android:visibility="gone"
        app:cardUseCompatPadding="false"
        style="?android:attr/borderlessButtonStyle"

        app:contentPadding="0dp">

        <ImageView
            android:id="@+id/imageStop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_9sdp"
            app:srcCompat="@drawable/stop22" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/imageViewSend"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:translationZ="@dimen/_1sdp"
        android:visibility="gone"
        style="?android:attr/borderlessButtonStyle"

        app:cardCornerRadius="@dimen/_14sdp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardUseCompatPadding="false"
        app:contentPadding="0dp">

        <ImageView
            android:id="@+id/imageSend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_9sdp"
            app:srcCompat="@drawable/send22" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutSlideCancel"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:gravity="center"
        android:translationZ="@dimen/_3sdp"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:rotation="-90"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Slide to Cancel"
            android:textColor="#898f9d"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:translationZ="@dimen/_2sdp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shadow" />

            <ImageView
                android:id="@+id/imageViewMic"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:paddingBottom="2dp"
                app:srcCompat="@drawable/mic_ic"
                android:tint="@android:color/holo_red_light"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layoutDustin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:gravity="left|bottom"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dustin_cover"
                    android:layout_width="32dp"
                    android:layout_height="4dp"
                    app:srcCompat="@drawable/dustbin_cover_ic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/dustin"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/dustbin_wheel_ic"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="0:00"
                android:textSize="20sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layoutMessage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="72dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <EditText
                    android:id="@+id/editTextMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxHeight="@dimen/_55sdp"
                    android:background="@null"
                    android:textSize="@dimen/_14sdp"
                    android:hint="Type Message"
                    android:paddingLeft="4dp" />
                <ImageView
                    android:id="@+id/imageViewAttachment"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_action_name"
                    android:visibility="visible"
                    />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>



